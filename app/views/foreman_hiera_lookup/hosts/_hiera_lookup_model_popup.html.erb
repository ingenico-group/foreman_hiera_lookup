<% javascript 'host_hiera_lookup' %>
<style>
  .borderless tr td {
    border: none !important;
  }
</style>
<div id="confirmation-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Hiera Lookup</h4>
      </div>
      <div class="modal-body">



        <div class="form-horizontal">

          <div class="form-group ">
            <div class="col-md-12">
              <form name="hiera_lookup_form" onSubmit="return false;">
                <div class="col-md-11" style="padding-left:0px;">
                  <input type="text" name="hiera_variable" id="hiera_variable" placeholder="Hiera variable" class="form-control " focus-me="focusInput" autofocus>
                  <div id="hiera_variable_error" class="text-danger"></div>
                </div>
                <div class="col-md-1">
                  <input type="submit" onclick="get_hiera_lookup_value()" value="Get" name="commit" id="hiera_variable_get" class="btn btn-primary">
                </div>
              </form>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-12" id="hiera_variable_value">

            </div>
          </div>

          <div class="form-group">
            <div class="col-md-12">

              <table class="table borderless" >
                <tbody id="hiera_variable_found_and_dependencies">
                  
                </tbody>

              </table>
              
            </div>
          </div>

        </div>
        

        

      </div>
      
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


<script type="text/javascript">
var hiera_lookup_hash = $(location).attr('hash')
if(hiera_lookup_hash.indexOf("hiera_lookup") >= 0){
  load_host_hiera_lookup_popup()
  var hiera_variable = ""
  var hiera_parameters = hiera_lookup_hash.split("?")
  for(i=0; i<hiera_parameters.length; i++){
    if(hiera_parameters[i].indexOf("hiera_variable") >= 0){
      hiera_variable = hiera_parameters[i].split("=")[1]
    }
  }
  if(hiera_variable != ""){
    get_hiera_lookup_dependent_value(hiera_variable)
  }
}
</script>
